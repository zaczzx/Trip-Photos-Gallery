<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <% camp.name %></h1>
        <div style="width:30%; margin:25px auto">
            <form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>"></input>
                </div>
                <div class="form-group">
                <input class="form-control"type="number" name="camp[price]" value="<%= camp.price %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                <input class="form-control"type="text" name="camp[image]" value="<%= camp.image %>"></input>
                </div>
                <div class="form-group">
                <input class="form-control"type="text" name="camp[description]" value="<%= camp.description %>"></input>
                </div>
                <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/camps">GO BACK</a>        
        </div>
    </div>
</div>

<% include ../partials/footer %>

