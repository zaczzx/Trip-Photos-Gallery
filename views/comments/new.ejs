<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a new Comment to <%= camp.name %></h1>
        <div style="width:30%; margin:25px auto">
            <form action="/camps/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">SUBMIT!</button>
                </div>
            </form>
            <a href="/camps">GO BACK</a>        
        </div>
            
    </div>
</div>

<% include ../partials/footer %>

