<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Log in</h1>
        <div style="width:35%; margin:25px auto">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" placeholder="Username" autofocus="autofocus"></input>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" placeholder="Password"></input>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-lg btn-block" type="submit" value="Log in"></input>
            </div>
        </form>
        <a href="/register">Not register yet ?</a>
        <a href="/forgot" style="float:right">Forgot password ?</a>
        </div>
    </div>
</div>


