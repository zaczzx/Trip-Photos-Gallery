<% include ../partials/header %>

<div class="container" style="width:70%; margin:25px auto">
    <form id="register" action="/register" method="POST">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1 class="text-center">Sign Up</h1>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <label for="displayName">Display Name</label>
              <input pattern=".{3,15}" id="displayName" class="form-control" type="text" id="displayName" name="displayName" placeholder="Display Name*" required title="Must be between 3 and 15 Characters">
            </div>
          </div>
          <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <label for="email">Email</label>
              <input id="email" class="form-control" type="email" id="email" name="email" placeholder="Email*" required>
            </div>
          </div>
        </div>
        <div class="row">
         <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <label for="username">Username</label>
              <input pattern=".{3,10}" id="username" class="form-control" type="text" id="username" name="username" placeholder="Username*" required title="Must be between 3 and 10 Characters">
            </div>
          </div>
          <div class="col-md-4 col-md-offset-0 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <label for="password">Password</label>
              <input pattern=".{8,20}" id="password" class="form-control" type="password" id="password" name="password" placeholder="Password*" required title="Password must be between 8 and 20 characters.">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <label for="adminCode">Admin Code</label>
              <input id="adminCode" class="form-control" type="text" name="adminCode" placeholder="Admin Code (Option)">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <label for="bio">Bio</label>
              <textarea id="bio" class="form-control" type="bio" name="bio" rows="4" placeholder="Write a short description of yourself and what you enjoy about camping. (Option)"></textarea>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
              <div id="captcha" class="g-recaptcha form-group" data-sitekey="<%= process.env.RECAPTCHA_SITE %>"></div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
            <a href="/camps">Go Back</a>
          </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
              <div class="form-group">
                <p class="text-center"><strong>*</strong> indicates a required field.</p>
              </div>
            </div>
        </div>
      </div>
    </form>
</div>


<% include ../partials/footer %>
